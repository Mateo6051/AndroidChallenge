<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#15000000" />
            <corners android:radius="24dp" />
            <padding android:bottom="4dp" />
        </shape>
    </item>
    <!-- Right shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0A000000" />
            <corners android:radius="24dp" />
            <padding android:right="4dp" />
        </shape>
    </item>
    <!-- Top highlight -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/surface" />
            <corners android:radius="24dp" />
            <!-- Top and left highlight for neumorphic effect -->
            <gradient
                android:angle="315"
                android:startColor="@color/card_highlight"
                android:endColor="@color/surface"
                android:type="linear" />
        </shape>
    </item>
    <!-- Inner border -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="23dp" />
            <!-- Very subtle inner border -->
            <stroke 
                android:width="1dp" 
                android:color="@color/card_border" />
        </shape>
    </item>
</layer-list> 