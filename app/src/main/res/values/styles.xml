<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style pour les textes élégants de titre -->
    <style name="ElegantTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingMultiplier">0.9</item>
        <item name="android:elevation">4dp</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>
    
    <!-- Style pour des cartes avec effet neumorphique -->
    <style name="NeumorphicCardStyle">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <!-- Style pour les boutons élégants -->
    <style name="ElegantButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/elegant_button</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Style pour effet de verre dépoli -->
    <style name="GlassCardStyle">
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="android:background">@drawable/glass_effect</item>
    </style>
    
    <!-- Style pour les sous-titres élégants -->
    <style name="ElegantSubtitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <!-- Style pour barres de progression modernes -->
    <style name="ModernProgressStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint">@color/progress_background</item>
        <item name="android:progressTint">@color/accent</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
    </style>
</resources> 